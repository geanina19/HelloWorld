<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/calculatorActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        app:layout_constraintBottom_toTopOf="@+id/textViewActivityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/textViewActivityButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Text View"
        app:layout_constraintBottom_toTopOf="@+id/calculator2ActivityButton"
        app:layout_constraintStart_toStartOf="@+id/calculatorActivityButton"
        app:layout_constraintTop_toBottomOf="@+id/calculatorActivityButton" />

    <Button
        android:id="@+id/calculator2ActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora2"
        app:layout_constraintBottom_toTopOf="@+id/sendEmailActivityButton"
        app:layout_constraintStart_toStartOf="@+id/textViewActivityButton"
        app:layout_constraintTop_toBottomOf="@+id/textViewActivityButton" />

    <Button
        android:id="@+id/sendEmailActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Enviar email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/calculator2ActivityButton"
        app:layout_constraintTop_toBottomOf="@+id/calculator2ActivityButton" />
</androidx.constraintlayout.widget.ConstraintLayout>